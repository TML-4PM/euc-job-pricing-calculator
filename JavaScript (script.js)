document.getElementById('calculate').addEventListener('click', async () => {
    const jobCost = document.getElementById('jobCost').value;
    if (!jobCost) {
        document.getElementById('result').textContent = 'Please enter a valid job cost.';
        return;
    }

    try {
        const response = await fetch('/api/price?cost=' + jobCost);
        const data = await response.json();
        document.getElementById('result').textContent = `Final Price: $${data.price}`;
    } catch (error) {
        document.getElementById('result').textContent = 'Error calculating price.';
    }
});
